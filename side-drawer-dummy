              style={ [styles.menuItem, { backgroundColor: colors.surface }] }
onPress = {() => toggleSubmenu("upcoming")}
            >
    <View style={ styles.menuItemContent }>
        <Text style={ styles.menuIcon }>üîÆ</Text>
            < Text style = { [styles.menuTitle, { color: colors.textPrimary }]} >
                Upcoming Features
                    </Text>
                    </View>
                    < Text
style = { [styles.expandIcon, { color: colors.textSecondary }]}
    >
    { expandedMenus.upcoming ? "‚àí" : "+" }
    </Text>
    </TouchableOpacity>

{
    expandedMenus.upcoming && (
        <View style={ styles.submenu }>
        {
            upcomingSections.map((section, sectionIndex) => (
                <View key= { sectionIndex } >
                {
                    section.items.map((item, itemIndex) => (
                        <TouchableOpacity
                        key= { itemIndex }
                        style = { [styles.submenuItem, { opacity: 0.6 }]}
                        disabled = { true}
                        >
                        <Text
                          style={
                        [
                        styles.submenuText,
                        { color: colors.textSecondary },
                          ]}
                    >
                    { item.icon } { item.title }(Coming Soon)
                    </Text>
                    </TouchableOpacity>
                    ))
        }
            </View>
                ))
}
</View>
            )}
</ScrollView>
    </SafeAreaView>
    < TouchableOpacity style = { styles.backdrop } onPress = { onClose } />
        </View>
        </Modal>
  );
};

